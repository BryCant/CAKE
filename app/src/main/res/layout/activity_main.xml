<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4BFC4"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/header"
            android:layout_width="fill_parent"
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:padding="8dp"
            android:layout_width="264dp"
            android:textColorHint="#FFF"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/wrd"
            android:ems="10"
            android:background="#B2FF3E4F"
            android:id="@+id/editText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="216dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:padding="10dp"
            android:layout_width="274dp"
            android:layout_height="88dp"
            android:inputType="textPersonName"
            android:textColorHint="#FFF"
            android:gravity="top"
            android:hint="@string/def"
            android:background="#A43EFFFF"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="304dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintStart_toStartOf="@+id/editText"/>

    <Button
            android:layout_width="172dp"
            android:text="@string/addWrdBtn"
            android:background="#81D53EFF"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"/>

</android.support.constraint.ConstraintLayout>